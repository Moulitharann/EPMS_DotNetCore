@model List<EmployeePerformancesManagementSystem.MVC.Models.PerformanceCriteria>

@{
    ViewBag.Title = "Performance Evaluation Criteria";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<div class="container mt-4">
    <h2 class="text-center">Performance Evaluation</h2>

    <h3 class="mt-4">Define New Criteria</h3>
    <div class="row g-3">
        <div class="col-md-4">
            <select id="criteriaName" class="form-control">
                <option value="Timeline">TimeLine</option>
                <option value="LeaderShip">LeaderShip</option>
                <option value="Technical Skill">Technical Skill</option>
            </select>
        </div>
        <div class="col-md-3">
            <input type="number" id="criteriaWeight" class="form-control" placeholder="Enter Weightage">
        </div>
        <div class="col-md-3">
            <input type="number" id="employeeId" class="form-control" placeholder="Employee ID">
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary w-100" onclick="addCriteria()">Add Criteria</button>
        </div>
    </div>
    <div class="table-responsive mt-4" id="criteriaTableContainer" style="display: none;">
        <table class="table table-bordered table-hover" id="criteriaTable">
            <thead class="table-dark">
                <tr>
                    <th>Criteria Name</th>
                    <th>Weightage</th>
                    <th>Employee Id</th>
                    <th>Manager Id</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody id="criteriaBody"></tbody>
        </table>

        <div id="paginationControls" class="mt-3 d-flex justify-content-center align-items-center">
            <button class="btn btn-primary me-2" id="prevPage" disabled>Previous</button>
            <span id="pageInfo" class="mx-2"></span>
            <button class="btn btn-primary ms-2" id="nextPage">Next</button>
        </div>

    </div>

</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/Scripts/HR/Evalution.js" asp-append-version="true"></script>

