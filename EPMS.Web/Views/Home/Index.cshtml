@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home - Employee Performance Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        /* White & Black Theme */
        body {
            background-color: lightgrey;
            font-family: 'Arial', sans-serif;
            color: black;
            overflow: hidden;
        }
        .home-container {
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            animation: fadeInEffect 1.5s ease-in-out;
        }
        .welcome-text {
            font-size: 2.5rem;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
            animation: slideInEffect 1.5s ease-in-out;
        }
        .subtext {
            font-size: 1.3rem;
            margin-bottom: 30px;
            animation: fadeInEffect 2s ease-in-out;
        }
        .btn-custom {
            background-color: black;
            color: white;
            padding: 14px 28px;
            font-size: 1.2rem;
            border-radius: 50px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            animation: fadeInEffect 2.5s ease-in-out;
        }
        .btn-custom:hover {
            background-color: #333;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
            transform: scale(1.05);
        }

        /* Animation keyframes */
      
    </style>

</head>
<body>
    <main class="home-container">
        <div class="container-sm">
            <h1 class="welcome-text">Empower Your Workforce, Elevate Success</h1>
            <p class="subtext">Effortlessly track, evaluate, and enhance employee performance with ease.</p>
            <button id="actionButton" class="btn btn-custom" onclick="handleRedirect()">Get Started</button>
        </div>
    </main>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var user = localStorage.getItem("userRole");
            var actionButton = document.getElementById("actionButton");

            if (user != null) {
                actionButton.textContent = "Go to Dashboard";
                actionButton.setAttribute("data-role", user);
            } else {
                actionButton.textContent = "Get Started";
            }
        });

        function handleRedirect() {
            var user = localStorage.getItem("userRole");
            if (user == null) {
                window.location.href = "/Auth/Register";
            } else {
                if (user === "Manager") {
                    window.location.href = "/Manager/Dashboard";
                } else if (user === "Employee") {
                    window.location.href = "/Employee/Dashboard";
                } else if (user === "HRAdmin") {
                    window.location.href = "/HRAdmin/Dashboard";
                } else {
                    window.location.href = "/Dashboard";
                }
            }
        }
    </script>
</body>
</html>
