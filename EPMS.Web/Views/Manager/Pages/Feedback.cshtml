@{
    ViewBag.Title = "Provide Feedback";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Provide Feedback</title>
 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

</head>
<body class="bg-light">
    <div class="container mt-4">
        <h2 class="text-center">Provide Feedback</h2>
        <hr />

        <form id="feedbackForm">
            <div class="mb-3">
                <label class="form-label">Select Task:</label>
                <select class="form-control" id="taskSelect" required>
                    <option value="">-- Select Task --</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Star Rating (1-5):</label>
                <input type="number" class="form-control" id="starRating" min="1" max="5" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Comments:</label>
                <textarea class="form-control" id="comments" rows="4" required></textarea>
            </div>

            <button type="submit" class="btn btn-success">Submit Feedback</button>
        </form>
    </div>
    <script src="~/js/Scripts/Manager/Feedback.js" asp-append-version="true"></script>
   

</body>
</html>
